# LokaStream Environment Variables
# Copy this file to .env.local and fill in your values

# ===================
# SUPABASE
# ===================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ===================
# MIDTRANS PAYMENT GATEWAY
# ===================
# Get your keys from https://dashboard.midtrans.com
# Sandbox (Testing): https://dashboard.sandbox.midtrans.com

# Server Key (keep secret, only use on server-side)
MIDTRANS_SERVER_KEY=SB-Mid-server-xxxxxxxxxxxxx

# Client Key (can be exposed to client)
MIDTRANS_CLIENT_KEY=SB-Mid-client-xxxxxxxxxxxxx

# Set to 'true' for production, 'false' for sandbox
MIDTRANS_IS_PRODUCTION=false

# ===================
# APP CONFIGURATION
# ===================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ===================
# OPTIONAL: NOTIFICATIONS
# ===================
# Discord webhook for notifications
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx

# Telegram bot for notifications
# TELEGRAM_BOT_TOKEN=your-bot-token
# TELEGRAM_CHAT_ID=your-chat-id
